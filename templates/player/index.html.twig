{% extends 'base.html.twig' %}

{% block title %}Player index
{% endblock %}

{% block body %}
	<h1>Player index</h1>

	<table border="1">
		<thead>
			<tr>
				<th>Ref</th>
				<th>Name</th>
				<th>Surname</th>
				<th>Stade</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for player in players %}
				<tr>
					<td>{{ player.ref }}</td>
					<td>{{ player.name }}</td>
					<td>{{ player.surname }}</td>
					<td>{{ player.stade }}</td>

					<td>
						<a href="{{ path('app_player_show', {'ref': player.ref}) }}">show</a>
					</td>
					<td>
						<a href="{{ path('app_player_edit', {'ref': player.ref}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_player_new') }}">Create new</a>
{% endblock %}
